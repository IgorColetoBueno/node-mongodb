<section class="panel panel-default">
    <div class="panel-heading">
        <h4 class="text-center">Edit car</h4>
    </div>
    <div class="panel-body">
        <form action="/cars/{{car._id}}" method="POST">
        <input type="hidden" value="PUT" name="_method">
            <div class="form-group">
                <input class="form-control" type="text" name="driver_name" placeholder="Driver name" value="{{car.driver_name}}">
            </div>

            <div class="form-group">
                <input class="form-control" type="text" name="licence_plate" placeholder="Licence plate" value="{{car.licence_plate}}">
            </div>

            <div class="form-group">
                <select class="form-control" name="status">
                    {{#equals car.status 'OUT'}}
                    <option>OUT</option>
                    <option>IN</option>
                    {{/equals}} {{#equals car.status 'IN'}}
                    <option>IN</option>
                    <option>OUT</option>
                    {{/equals}}
                </select>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Edit">
            </div>
        </form>
    </div>
</section>